<div class="row">
    <div class="col-md-3">
        <%= render 'room_menu' %>
    </div>

    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">Photos</div>

            <div class="panel-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8">

                            <%= form_for @room do |f| %>
                              <div class="row">
                                <div class="form-group">
                                    <div class="dropzone" id="myDropzone" action="/rooms/<%= @room.id %>/upload_photos">
                                        <i class="fa fa-cloud-upload" aria-hidden="true"></i>
                                    </div>
                                </div>
                              </div>
                            <% end %>

                        </div>
                    </div>

                    <div id="photos">
                        <%= render 'photos_list' %>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    Dropzone.options.myDropzone = {
        paramName: "file",
        maxFiles: 1,
        maxFilesize: 2,
        acceptedFiles: "image/*",
        init: function() {
            this.on("complete", function(file) {
                location.reload();
            })
        }
    }
</script>